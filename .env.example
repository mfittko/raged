# rag-stack environment variables
# Copy to .env and adjust values for local development.
# These are NOT loaded by the application â€” they document available configuration.

# --- RAG API ---
PORT=8080
RAG_API_TOKEN=

# --- Database (New - for future migration) ---
DATABASE_URL=postgresql://rag:rag@localhost:5432/ragstack
POSTGRES_USER=rag
POSTGRES_PASSWORD=rag
POSTGRES_DB=ragstack

# --- Qdrant (Current - still in use) ---
QDRANT_URL=http://localhost:6333
QDRANT_COLLECTION=docs
VECTOR_SIZE=768
DISTANCE=Cosine

# --- Ollama ---
OLLAMA_URL=http://localhost:11434
EMBED_MODEL=nomic-embed-text

# --- Enrichment (optional) ---
ENRICHMENT_ENABLED=false
REDIS_URL=redis://localhost:6379

# --- Neo4j Graph (optional) ---
NEO4J_URL=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=  # Empty = auth disabled. Set a secure password for production.

# --- Blob Storage (optional, MinIO) ---
BLOB_STORE_URL=http://localhost:9000
BLOB_STORE_ACCESS_KEY=minioadmin
BLOB_STORE_SECRET_KEY=minioadmin
BLOB_STORE_BUCKET=rag-raw
BLOB_STORE_THRESHOLD_BYTES=10485760  # 10MB - files larger than this are stored in blob storage
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin
